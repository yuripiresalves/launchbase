{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/partials/create.css">
{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section 
            class="image"
            style="background: url(https://source.unsplash.com/collection/8684183/900x900) no-repeat center center / cover">
        </section>

        <section class="details">
                <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Digite seu nome">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="graduation">
                        <option value="" selected>Selecione uma opção</option>
                        <option value="medio">Ensino Médio Completo</option>
                        <option value="superior">Ensino Superior Completo</option>
                        <option value="mestrado">Mestrado</option>
                        <option value="doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="classes_type" value="Presencial">Presencial</span>
                    <span><input type="radio" name="classes_type" value="À Distância" checked>À Distância</span>
                </div>
            </div>
            
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="classes" placeholder="Separe as matérias por vírgula">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}