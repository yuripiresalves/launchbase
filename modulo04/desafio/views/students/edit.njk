{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/partials/create.css">
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="image" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <form method="POST" action="/students?_method=PUT">

                <h3>Editar Aluno</h3>

                {% include "students/fields.njk" %}

                <input type="hidden" name="id" value="{{ student.id }}">

            </form>

            <form id="form-delete" action="/students?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{ student.id }}">
                <button id="delete" type="submit">Deletar</button>
            </form>

        </section>

    </div>

    {% include "confirm.njk" %}
{% endblock content %}