{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/partials/instructors.css">
{% endblock head %}

{% block content %}
  <div class="card table-container">

    <div class="header">
      <a href="/instructors/create">Novo</a>

      <form action="/instructors" method="get">
        <input 
          type="text"
          name="filter"
          placeholder="Nome ou Atendimento"
          value={{filter}}
        >
        <button type="submit">Filtrar</button>
      </form>
    </div>
    
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{instructor.avatar_url}})"></span>
              {{ instructor.name }}
            </td>
            <td>
              {% for service in instructor
                .services
                .split(",") %}
                <span>{{ service }}</span>
              {% endfor %}
            </td>
            <td>{{ instructor.total_students }}</td>
            <td>
              <a href="/instructors/{{instructor.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>

  </div>
{% endblock content %}