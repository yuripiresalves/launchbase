{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles/partials/courses.css">
    
    <title>Cursos | Rocketseat</title>
{% endblock head %}

{% block content %}

    <div id="wrapper-contents">
        <div class="title">
            <h1>Cursos Rocketseat</h1>
        </div>

        <div class="cards">

            <div class="card" id="starter">
                <div class="card-content">
                    <div class="card-image">
                        <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/starter.svg" alt="Logo Starter">
                    </div>
                    <div class="card-title">
                        <h1>Curso Starter</h1>
                    </div>
                    <div class="card-info">
                        <p>5 M칩dulos</p>
                        <p class="card-price" id="starter">Gr치tis</p>
                    </div>

                </div>
            </div>

            <div class="card" id="launchbase">
                <div class="card-content">
                    <div class="card-image">
                        <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/launchbase.svg" alt="Logo Launchbase">
                    </div>
                    <div class="card-title">
                        <h1>Bootcamp Launchbase</h1>
                    </div>
                    <div class="card-info">
                        <p>5 M칩dulos</p>
                        <p class="card-price" id="launchbase">R$ 999,00</p>
                    </div>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card-content">
                    <div class="card-image">
                        <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/gostack.svg" alt="Logo GoStack">
                    </div>
                    <div class="card-title">
                        <h1>Bootcamp GoStack</h1>
                    </div>
                    <div class="card-info">
                        <p>5 M칩dulos</p>
                        <p class="card-price" id="gostack">R$ 2.999,00</p>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="modal-overlay">
        <div class="modal">

            <div class="modal-close">
                <span class="material-icons">
                    close
                </span>
            </div>

            <div class="modal-fullscreen">
                <span class="material-icons">
                    fullscreen
                </span>
            </div>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="scripts.js"></script>

{% endblock content %}