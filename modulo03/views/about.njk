{% extends "layout.njk" %}

{% block head %}
<title>Sobre | {{ about.name }}</title>

<link rel="stylesheet" href="/styles/partials/about.css">

{% endblock %}

{% block content %}


<div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="{{ about.name }}">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>{{ about.description }}</p>
</div>

<footer>
    <div>
        {% for link in about.links %}
            <a href="{{link.url}}" target="_blank"><img src="{{link.image}}" alt="{{link.name}}"></a>
        {% endfor %}    
    </div>
</footer>

{% endblock %}