{% extends "layout.njk" %}

{% block head %}
    <title>Portfolio | Yuri Alves</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles/partials/portfolio.css">

{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Portf√≥lio</h1>
    </div>

    <section class="cards">

        {% for item in items %}

            <div class="card" id="{{item.id}}">

                <div class="card-image-container {{ 'featured-wrapper' if item.featured }}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/hqdefault.jpg" alt="Imagem de {{item.title}}">
                    {% if item.featured %}
                        <div class="featured">Destaque</div>
                    {% endif %}
                </div>
                <div class="card-content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card-info">
                    <p>{{item.duration}}</p>
                    <p class="card-price">{{item.price}}</p>
                </div>

            </div>

        {% endfor %}

    </section>

    <div class="modal-overlay">

        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
            </div>
        </div>

    </div>

    <script src="scripts.js"></script>

{% endblock %}